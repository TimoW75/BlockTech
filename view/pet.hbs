<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../static/css/app.css">
    <title>Pet</title>
</head>
<body class="photopage">

     <section class="formHeader">
        <h1>Pet Photography</h1>
        <a href="/"><img src="/static/images/cross.png" class="back" alt="back button"> </a>
    </section>

     <section class="imgGrid">
        {{#each imgPet}}
            {{#each this}}
                {{#if imageBase64}}
                <section class="uploadImgGrid">
                    <h1>{{date}}</h1>
                     <img src='data:{{contentType}};base64,{{imageBase64}}' alt="UploadedImage" class="uploadedImage">
                </section>
                {{/if}}
            {{/each}}
        {{/each}}
    </section>

      <form method="post" action="/pet" enctype="multipart/form-data">
        <section class="buttonFormLeft">
            <label class="browse" for="formFile"> <img src="/static/images/folder.png" id="newImg" alt="profile picture">New Image</label>
            <input type="file"  name="imagesPet" id="formFile" multiple>
        </section>
        <section class="buttonFormRight">
            <label class="uploadLabel" for="upload"> <img src="/static/images/upload.png" id="uploadImg" alt="profile picture">Upload</label>
            <input type="submit" class="submitBtn" id="upload" value="Upload">
        </section>
    </form>


    <form action="/remove" method="post">
        <section class="delete">
            <input type="hidden" id="remove">  
            <button type="submit" name="pet" value="pet" >Delete Style</button>
        </section>
    </form>

   


</body>
</html>