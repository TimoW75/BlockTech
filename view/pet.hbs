<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../static/css/app.css">
    <title>pet</title>
</head>
<body class="photopage">
    
<section class="section">
        <div class="container">
            

            <div>
                <form action="/pet" enctype="multipart/form-data"  method="post">
                    <section class="button">
                        <input type="file" class="form-control" name="images" id="formFile" multiple>
                        <input type="submit" class="btn" value="upload images">
                    </section>
                </form>
            </div>
        </div>

<section class="imgGrid">
    {{#each imgPet}}
        {{#each this}}
            {{#if imageBase64}}
            
                <section class="uploadImgGrid">
                     <img src='data:{{contentType}};base64,{{imageBase64}}' alt="UploadedImage" class="uploadedImage">
                </section>

            {{/if}}
        {{/each}}
    {{/each}}
</section>


</body>
</html>