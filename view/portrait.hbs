<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../static/css/app.css">
    <title>Portrait</title>
</head>
<body class="photopage">
    
    <section class="imgGrid">
        {{#each imgPortrait}}
            {{#each this}}
                {{#if imageBase64}}
                <section class="uploadImgGrid">
                     <img src='data:{{contentType}};base64,{{imageBase64}}' alt="UploadedImage" class="uploadedImage">
                </section>
                {{/if}}
            {{/each}}
        {{/each}}
    </section>

    
    <form action="/portrait" enctype="multipart/form-data"  method="post">
        <section class="uploadForm"> 
            <section class="buttonForm">
                <input type="file" class="form-control" name="imagesPortrait" id="formFile" multiple>
                <input type="submit" class="btn" value="upload images">
            </section>
        </section>
    </form>

    <form action="/remove" method="post">
        <section class="delete">
            <input type="hidden" id="remove">  
            <button type="submit" name="portrait" value="portrait">Delete Style</button>
        </section>
    </form>

</body>
</html>